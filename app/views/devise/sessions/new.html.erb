<%= render "shared/navbar_simple" %>

<div class="bg-gray-100 py-12 px-6 md:px-8">
  <div class="flex flex-col items-center">
    <h2 class="text-3xl font-extrabold text-gray-900">Log in</h2>

    <%= form_for(resource, as: resource_name, html: {class: "bg-white py-8 px-10 shadow rounded-lg my-8 max-w-md w-full"}, url: session_path(resource_name)) do |f| %>
      <div class="field mb-5">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-sm" %>
      </div>

      <div class="field mb-5">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-5">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-sm" %>
        </div>
      <% end %>

      <div class="actions">
        <div class="mb-5">
          <%= link_to "Don't have an account?", new_user_registration_path, class: "text-sm font-medium text-green-500 hover:text-green-400 focus:outline-none focus:underline transition ease-in-out duration-150" %>
        </div>
        <%= f.submit "Log in", class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-green-500 hover:bg-green-400 focus:outline-none focus:border-green-500 focus:shadow-outline-green transition duration-150 ease-in-out cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
