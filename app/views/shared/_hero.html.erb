<div id="hero" class="px-4">
    <div class="relative z-10 max-w-6xl mx-auto">
        <div class="flex justify-end mb-8">
            <%= link_to "Post an Ad", "#", class: "mt-8 py-2 px-4 border border-transparent text-sm font-medium rounded-sm text-white bg-green-500 hover:bg-green-400 focus:outline-none focus:border-green-500 focus:shadow-outline-green transition duration-150 ease-in-out cursor-pointer" %>
        </div>
        <p class="text-center text-2xl md:text-3xl font-extrabold text-white mb-8">Why waste, when you can sell for extra cash?</p>
        <%= form_with url: "/products", method: :get, class: "py-6 md:py-8 px-8 md:px-10 bg-black bg-opacity-50 flex" do |form| %>
            <%= form.text_field :query, class: "flex-grow px-4 md:px-6 py-2 md:py-4 border border-gray-300 shadow-sm focus:outline-none focus:border-green-500 text-sm md:text-lg", autocomplete: "off", placeholder: "I am looking for..." %>
            <%= form.submit "Search", class: "px-4 py-2  border border-transparent text-sm md:text-lg font-medium text-white bg-green-500 hover:bg-green-400 focus:outline-none focus:border-green-500 focus:shadow-outline-green transition duration-150 ease-in-out cursor-pointer" %>
        <% end %>
    </div>
</div>