<%= render "shared/navbar" %>
<%= render "shared/hero" %>

<div class="px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4 py-8">
        <% for i in 0..7 do %>
            <article class="bg-white rounded-sm p-2 shadow text-gray-900">
                <div class="bg-gray-100 mb-2 flex justify-center h-32 sm:h-40 relative">
                    <img src="https://via.placeholder.com/150">
                    <div class="hidden sm:block bg-black bg-opacity-60 px-3.5 py-2 text-white absolute top-2/3 -left-2 font-medium">
                        <span class="text-green-500">$</span>
                        4,300
                    </div>
                </div>
                <div>
                    <p class="text-sm"><%= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce risus sem, sollicitudin non purus sit amet, dapibus feugiat lorem. Nulla lobortis imperdiet nunc, vitae lobortis mi dignissim a.".truncate(40) %></p>
                    <p class="sm:hidden text-sm font-medium text-green-500">$ 4,300</p>
                </div>
            </article>
        <% end %>
    </div>
    <div class="flex justify-center items-center pb-16">
        <%= link_to "See all", products_path, class: "py-3 px-12 border-2 border-green-500 font-medium rounded-sm text-gray-900 bg-transparent hover:bg-green-500 hover:text-white focus:outline-none focus:border-green-500 focus:shadow-outline-green transition duration-150 ease-in-out cursor-pointer" %>
    </div>
</div>

<%= javascript_pack_tag 'navbar' %>
