<%= render "shared/navbar" %>

<div class="px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto py-8">
        <div class="grid gap-4">
            <div class="grid grid-cols-8 gap-4 md:items-start">
                <div class="md:col-span-5 col-span-full">
                    <div class="bg-white rounded p-4 shadow text-gray-900 mb-4">
                        <div class="flex justify-between items-center pb-4">
                            <h1 class="font-medium text-xl">My Cart</h1>
                        </div>
                        <div id="profile-cart__cart-items-container">
                            <article class="flex flex-col sm:flex-row py-6 text-gray-900 border-t">
                                Loading...
                            </article>
                        </div>
                        <div class="flex justify-end font-bold">
                            <span class="mr-8">Sub-total</span><span id="profile-cart__cart-items-subtotal1">-</span>
                        </div>
                    </div>
                    <div class="bg-white rounded p-4 shadow text-gray-900 md:hidden">
                        <div class="flex flex-col justify-between">
                            <div class="">
                                <div class="text-lg pb-4 mb-4 border-b">
                                    <p class="font-medium text-xl">Total</p>
                                </div>
                                <div class="flex justify-between items-center mb-2">
                                    <p class="font-medium">Sub-total</p>
                                    <p id="profile-cart__cart-items-subtotal2">-</p>
                                </div>
                                <div class="flex justify-between items-center mb-2">
                                    <p class="font-medium">Delivery</p>
                                    <p>$0.00</p>
                                </div>
                            </div>
                            <div>
                                <button class="w-full flex justify-center py-2 px-4 border-2 border-transparent text-sm font-medium rounded text-white bg-green-500 hover:bg-green-400 focus:outline-none focus:border-green-500 focus:shadow-outline-indigo transition duration-150 ease-in-out cursor-pointer mt-2 profile-cart__checkout">Checkout</button>
                                <div class="w-48 mx-auto">
                                    <%= image_tag "3_Card_color_horizontal.svg" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="md:col-span-3 col-span-full bg-white rounded p-4 shadow text-gray-900 hidden md:block sticky top-0">
                    <div class="flex flex-col justify-between">
                        <div class="">
                            <div class="text-lg pb-4 mb-4 border-b">
                                <p class="font-medium text-xl">Total</p>
                            </div>
                            <div class="flex justify-between items-center mb-2">
                                <p class="font-medium">Sub-total</p>
                                <p id="profile-cart__cart-items-subtotal3">-</p>
                            </div>
                            <div class="flex justify-between items-center mb-2">
                                <p class="font-medium">Delivery</p>
                                <p>$0.00</p>
                            </div>
                        </div>
                        <div>
                            <button class="w-full flex justify-center py-2 px-4 border-2 border-transparent text-sm font-medium rounded text-white bg-green-500 hover:bg-green-400 focus:outline-none focus:border-green-500 focus:shadow-outline-indigo transition duration-150 ease-in-out cursor-pointer mt-2 profile-cart__checkout">Checkout</button>
                            <div class="w-48 mx-auto">
                                <%= image_tag "3_Card_color_horizontal.svg" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%= javascript_pack_tag 'navbar' %>
<%= javascript_pack_tag 'cart' %>