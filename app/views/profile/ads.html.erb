<% provide(:title, "My Ads") %>

<%= render "shared/navbar" %>
<div class="bg-gray-50 py-12 px-6 xl:px-28 grid grid-cols-7 gap-8">
    <%= render "profile/shared/side_navbar" %>
    <div class="md:col-span-5 col-span-full">
        <h1 class="text-3xl font-extrabold text-gray-900 text-center mb-8">My Ads</h1>
        <% if flash[:success_ad] %>
            <div class="rounded-md bg-green-200 p-4 mb-3 text-gray-900 px-5 text-sm">
                <%= flash[:success_ad] %>
            </div>
        <% end %>
        <div class="grid gap-4">
            <% @products.each do |product| %>
                <article class="flex flex-col sm:flex-row bg-white rounded-md p-4 shadow text-gray-900">
                    <div class="w-36 h-36 flex justify-center items-center bg-gray-200">
                        <%= image_tag product.product_images.first.image %>
                    </div>
                    <div class="flex flex-col justify-between sm:ml-4 flex-1">
                        <div class="py-4 sm:py-0">
                            <div class="flex justify-between">
                                <p class="font-medium"><%= product.title %></p>
                                <p class="font-medium"><%= number_to_currency product.price/100.0 %></p>
                            </div>
                            <p class="text-sm"><%= product.description.truncate(150) %></p>
                        </div>
                        <div class="flex justify-between items-center">
                            <div>
                                <%= link_to products_show_path(category: "all", slug: product.slug), class: "bg-blue-400 hover:bg-blue-500 text-white border py-1 px-2 rounded font-medium transition duration-150 ease-in-out" do %>
                                    View
                                <% end %>
                                <%= link_to "#", class: "bg-white hover:bg-gray-100 text-gray-900 border py-1 px-2 rounded mx-2 font-medium transition duration-150 ease-in-out" do %>
                                    Edit
                                <% end %>
                                <%= link_to "#", class: "bg-red-500 hover:bg-red-600 text-white border py-1 px-2 rounded font-medium transition duration-150 ease-in-out" do %>
                                    Delist
                                <% end %>
                            </div>
                            <p class="italic text-sm"><%= product.updated_at %></p>
                        </div>
                    </div>
                </article>
            <% end %>
            <%= will_paginate @products %>
        </div>
    </div>
</div>

<%= javascript_pack_tag 'navbar' %>